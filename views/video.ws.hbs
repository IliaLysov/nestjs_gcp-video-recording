    async function uploadParts(resume) {
      updatePartsLength();
      return new Promise((resolve, reject) => {
        if (socket && socket.connected || resume) {
          if (parts.size > 0) {
            const [count, part] = [...parts.entries()][0];
            socket.emit('videoPart', {count, part}, (response) => {
              if (response) {
                parts.delete(count);
                uploadParts()
                  .then(() => resolve())
              } else {
                reject(new Error('Error sending part'));
              }
            });
          } else {
            disconnectSocket();
            resolve();
          }
        }
      })
    }

    function disconnectSocket() {
      if (socket && socket.connected && !isRecording && parts.size === 0) {
        socket.emit('endVideo');
        socket.disconnect();
      }
    }

    function connectToSocket() {
      if (!socket || !socket.connected) {
        socket = io(videoUploadUrl);
        socket.on('connect', () => {
          {{!-- alert(`
            CONNECTED
            handledOnDataAvailable = ${handledOnDataAvailable}
            handledUploadParts = ${handledUploadParts}
            handledUploadPartsPromise = ${handledUploadPartsPromise}
            handledUploadPartsPromiseRejected = ${handledUploadPartsPromiseRejected}
          `) --}}
          console.log('connected');
        });

        socket.on('disconnect', () => {
          {{!-- alert(`
            DISCONNECTED
            handledOnDataAvailable = ${handledOnDataAvailable}
            handledUploadParts = ${handledUploadParts}
            handledUploadPartsPromise = ${handledUploadPartsPromise}
            handledUploadPartsPromiseRejected = ${handledUploadPartsPromiseRejected}
          `) --}}
          console.log('disconnected');
        });

        socket.on('error', () => {
          console.log('disconnected');
          throw new Error('Socket connection error');
        });

        socket.io.on('reconnect', () => {
          console.log('reconnected');
          {{!-- alert(`
            RECONNECTED
            handledOnDataAvailable = ${handledOnDataAvailable}
            handledUploadParts = ${handledUploadParts}
            handledUploadPartsPromise = ${handledUploadPartsPromise}
            handledUploadPartsPromiseRejected = ${handledUploadPartsPromiseRejected}
          `) --}}
          uploadParts(true);
        });
      }
    }

    button.addEventListener('click', () => {
      if (!isRecording) {
        counter = 0;
        parts.clear();
        console.log('started');
        connectToSocket();
        mediaRecorder.start(timeDistanceSec * 1000);
        button.classList.add('stop');
      } else {
        console.log('stopped');
        mediaRecorder.stop();
        button.classList.remove('stop');
      }
      isRecording = !isRecording;
    });

    setupMediaRecorder();
  </script>

</body>
</html>